{
  "tests": [
    {
      "name": "Valid contact form submission",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 (999) 123-45-67",
        "email": "test@example.com"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing required field",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван",
        "phone": "+7 999 123 45 67"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Validation error"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Invalid email format",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 999 123 45 67",
        "email": "invalid-email"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Validation error"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "OPTIONS preflight request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    }
  ]
}
